<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8"
    android:fitsSystemWindows="true"
    tools:context=".ReferralDetailsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#2196F3"
        app:title="Referral Details"
        app:titleTextColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Personal Information -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Personal Information"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name:"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tv_personal_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name: [Name]"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PWD ID:"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tv_pwd_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PWD ID: [PWD ID]"
                        android:textSize="16sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Referral Details -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Referral Details"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dissability:"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tv_disability"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Disability: [Disability]"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Service Needed:"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tv_service_needed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Service Needed: [Service]"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="User Request:"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tv_remarks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="User's Remarks: [Remarks]"
                        android:layout_marginTop="8dp"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Submitted on:"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tv_timestamp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Submitted: [Timestamp]"
                        android:layout_marginTop="8dp"
                        android:textSize="16sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Status & Admin Remarks -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Status and Admin's Remarks"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <!-- Status -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status: "
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tv_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="[Status]"
                            android:textSize="18sp"/>
                    </LinearLayout>

                    <!-- Admin Remarks label -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Admin Remarks:"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"/>

                    <!-- Actual Admin Remarks text -->
                    <TextView
                        android:id="@+id/tv_admin_remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="[Admin remarks]"
                        android:textSize="16sp"
                        android:layout_marginTop="2dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
