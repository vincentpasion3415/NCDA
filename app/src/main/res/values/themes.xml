<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.NCDA" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/red_primary</item>
        <item name="colorPrimaryVariant">@color/red_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/gray_light</item>
        <item name="colorOnSecondary">@color/red_primary</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowBackground">@color/background_color</item>
        <item name="colorSurface">@color/surface_color</item>
        <item name="colorOnSurface">@color/on_surface_color</item>

        <item name="colorError">@color/red</item>
        <item name="colorOutlineVariant">@color/gray_light</item>

        <item name="colorOnSurfaceVariant">@color/grey_hint</item>

        <item name="android:textColorHint">@color/grey_hint</item>
        <item name="android:textColor">@color/on_surface_color</item>

        <item name="passwordToggleTint">@android:color/black</item>
    </style>

    <style name="Theme.NCDA.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/dark_red_primary</item>
        <item name="colorPrimaryVariant">@color/dark_red_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/dark_surface</item>
        <item name="colorSecondaryVariant">@color/dark_gray_dark</item>
        <item name="colorOnSecondary">@color/dark_on_surface</item>

        <item name="android:windowBackground">@color/dark_background</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/dark_on_surface</item>

        <item name="colorError">@color/dark_red</item>
        <item name="colorOutlineVariant">@color/dark_gray_dark</item>

        <item name="colorOnSurfaceVariant">@color/dark_gray_light</item>

        <item name="android:textColorHint">@color/dark_gray_light</item>
        <item name="android:textColor">@color/dark_on_surface</item>
    </style>

    <style name="Theme.NCDA.HighContrast" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#FFFF00</item> <item name="colorPrimaryVariant">#FFEB3B</item>
        <item name="colorOnPrimary">#000000</item> <item name="colorSecondary">#00FFFF</item> <item name="colorSecondaryVariant">#00BCD4</item>
        <item name="colorOnSecondary">#000000</item> <item name="android:statusBarColor">#000000</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowBackground">#000000</item>
        <item name="colorSurface">#000000</item> <item name="colorOnSurface">#FFFFFF</item> <item name="colorError">#FF0000</item>
        <item name="colorOutlineVariant">#FFFFFF</item>

        <item name="colorOnSurfaceVariant">#FFFFFF</item>
        <item name="android:textColorHint">#FFFFFF</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="HighContrastButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/red_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="HighContrastText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/on_surface_color</item>
    </style>
</resources>