<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.NCDA" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary branding colors (Light Theme) -->
        <item name="colorPrimary">@color/red_primary</item>
        <item name="colorPrimaryVariant">@color/red_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary branding colors (Light Theme) -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/gray_light</item>
        <item name="colorOnSecondary">@color/red_primary</item>

        <!-- Status bar and Window settings -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Background and Surface colors for Light Theme -->
        <item name="android:windowBackground">@color/background_color</item>
        <item name="colorSurface">@color/surface_color</item>
        <item name="colorOnSurface">@color/on_surface_color</item>

        <!-- Error and Outline colors for Material Design components (Light Theme) -->
        <item name="colorError">@color/red</item>
        <item name="colorOutlineVariant">@color/gray_light</item>

        <!-- ADDED: Material Components specific color for hints/outlines in light mode -->
        <item name="colorOnSurfaceVariant">@color/grey_hint</item>

        <!-- ADDED: Default text and hint colors for the light theme -->
        <item name="android:textColorHint">@color/grey_hint</item>
        <item name="android:textColor">@color/on_surface_color</item>
    </style>

    <style name="Theme.NCDA.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary branding colors (Dark Theme) -->
        <item name="colorPrimary">@color/dark_red_primary</item>
        <item name="colorPrimaryVariant">@color/dark_red_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary branding colors (Dark Theme) -->
        <item name="colorSecondary">@color/dark_surface</item>
        <item name="colorSecondaryVariant">@color/dark_gray_dark</item>
        <item name="colorOnSecondary">@color/dark_on_surface</item>

        <!-- Background and Surface colors for Dark Theme -->
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/dark_on_surface</item>

        <!-- Error and Outline colors for Material Design components (Dark Theme) -->
        <item name="colorError">@color/dark_red</item>
        <item name="colorOutlineVariant">@color/dark_gray_dark</item>

        <!-- ADDED: Material Components specific color for hints/outlines in dark mode -->
        <item name="colorOnSurfaceVariant">@color/dark_gray_light</item>

        <!-- ADDED: Default text and hint colors for the dark theme -->
        <item name="android:textColorHint">@color/dark_gray_light</item>
        <item name="android:textColor">@color/dark_on_surface</item>
    </style>

    <!-- This style is a child of Widget.AppCompat.Button, ensure your buttons use MaterialButton if possible -->
    <style name="HighContrastButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/red_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="HighContrastText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/on_surface_color</item>
    </style>
</resources>