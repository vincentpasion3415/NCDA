<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"  tools:context=".AppointmentSchedulingActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="PWD Appointment"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/voiceCommandButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="end"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Voice Command"
                android:src="@android:drawable/ic_btn_speak_now"
                app:tint="?attr/colorOnPrimary" />
        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/speechStatusTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Speech Status: Ready"
            android:textSize="16sp"
            android:textColor="?attr/colorOnPrimary"
            android:padding="8dp"
            android:gravity="center"
            android:visibility="gone"  android:background="?attr/colorPrimaryVariant"
            />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="User Information"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="?attr/colorOnSurface" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/fullNameTextInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Full Name">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextFullName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName" />
                </com.google.android.material.textfield.TextInputLayout>
                <ImageButton
                    android:id="@+id/fullNameSpeechButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="Speak for full name"
                    android:src="@android:drawable/ic_btn_speak_now"
                    app:tint="?attr/colorOnSurface" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/contactNumberTextInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Contact Number">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextContactNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:textColor="?attr/colorOnSurface" />
                </com.google.android.material.textfield.TextInputLayout>
                <ImageButton
                    android:id="@+id/contactNumberSpeechButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="Speak for contact number"
                    android:src="@android:drawable/ic_btn_speak_now"
                    app:tint="?attr/colorOnSurface" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emailAddressTextInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Email Address">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextEmailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:textColor="?attr/colorOnSurface" />
                </com.google.android.material.textfield.TextInputLayout>
                <ImageButton
                    android:id="@+id/emailAddressSpeechButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="Speak for email address"
                    android:src="@android:drawable/ic_btn_speak_now"
                    app:tint="?attr/colorOnSurface" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/pwdIdTextInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="PWD ID Number (Optional)">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextPwdId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="?attr/colorOnSurface" />
                </com.google.android.material.textfield.TextInputLayout>
                <ImageButton
                    android:id="@+id/pwdIdSpeechButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="Speak for PWD ID"
                    android:src="@android:drawable/ic_btn_speak_now"
                    app:tint="?attr/colorOnSurface" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Appointment Details"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Purpose of Appointment (e.g., Document Review, Consultation)"
                android:textSize="12sp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurface" />
            <Spinner
                android:id="@+id/spinnerPurpose"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/appointment_purposes"
                android:textColor="?attr/colorOnSurface" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preferred Date"
                android:textSize="12sp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="16dp" />
            <EditText
                android:id="@+id/editTextPreferredDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true"
                android:hint="Select Date (YYYY-MM-DD)"
                android:textColor="?attr/colorOnSurface" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preferred Time Slot"
                android:textSize="12sp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="16dp" />
            <Spinner
                android:id="@+id/spinnerPreferredTime"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/preferred_time_slots"
                android:textColor="?attr/colorOnSurface" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alternate Date / Time (Optional)"
                android:textSize="12sp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="16dp" />
            <EditText
                android:id="@+id/editTextAlternateDateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true"
                android:hint="Select Date and Time (YYYY-MM-DD HH:mm)"
                android:textColor="?attr/colorOnSurface" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mode of Appointment (In-Person / Virtual)"
                android:textSize="12sp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="16dp" />
            <RadioGroup
                android:id="@+id/radioGroupMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radioButtonInPerson"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="In-Person"
                    android:textColor="?attr/colorOnSurface" />
                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radioButtonVirtual"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Virtual"
                    android:textColor="?attr/colorOnSurface" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location (For In-Person Appointments)"
                android:textSize="12sp"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Region / City"
                android:textSize="12sp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurface" />
            <Spinner
                android:id="@+id/spinnerRegion"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/ncda_regions"
                android:textColor="?attr/colorOnSurface" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Specific NCDA Office"
                android:textSize="12sp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="16dp" />
            <Spinner
                android:id="@+id/spinnerOffice"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnSurface" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Special Requests / Accessibility Needs"
                android:textSize="12sp"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <CheckBox
                android:id="@+id/checkBoxInterpreter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Interpreter Needed?"
                android:textColor="?attr/colorOnSurface" />

            <CheckBox
                android:id="@+id/checkBoxWheelchairAccess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wheelchair Access Required?"
                android:textColor="?attr/colorOnSurface" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/specialRequestsTextInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Other Requests / Concerns">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextSpecialRequests"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:lines="3"
                        android:textColor="?attr/colorOnSurface" />
                </com.google.android.material.textfield.TextInputLayout>
                <ImageButton
                    android:id="@+id/specialRequestsSpeechButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="Speak for special requests"
                    android:src="@android:drawable/ic_btn_speak_now"
                    app:tint="?attr/colorOnSurface" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supporting Documents (If Required)"
                android:textSize="12sp"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Section (.jpg, .png, .pdf)"
                android:textSize="12sp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurface" />
            <Button
                android:id="@+id/buttonUploadDocuments"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Documents"
                android:textColor="?attr/colorOnSurface" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmation"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <CheckBox
                android:id="@+id/checkBoxAgreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I confirm that the information provided is accurate."
                android:textColor="?attr/colorOnSurface" />

            <Button
                android:id="@+id/buttonSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_marginTop="24dp"
                android:textColor="?attr/colorOnPrimary"
                android:backgroundTint="?attr/colorPrimary" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>