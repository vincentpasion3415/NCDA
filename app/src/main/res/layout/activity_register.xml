<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".RegisterActivity">

    <!-- Background image (this will be blurred in Java/Kotlin) -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_ncda_pattern"
        android:contentDescription="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Semi-transparent overlay (softens background brightness) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CCFFFFFF" />

    <!-- Foreground content (remains sharp and scrollable) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="56dp"
            android:paddingBottom="24dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create NCDA Account"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/speech_status_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Status: Listening..."
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/rounded_corner_background"
                android:textColor="?attr/colorOnSurface"
                android:visibility="gone"
                tools:visibility="visible"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account Credentials"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal">

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emailTextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Email Address (for login)"
                    android:textColorHint="?attr/colorOnSurfaceVariant"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:textColor="?attr/colorOnSurface"/>
                </com.google.android.material.textfield.TextInputLayout>
                <ImageButton
                    android:id="@+id/emailSpeechButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="Voice input for email"
                    android:src="@android:drawable/ic_btn_speak_now"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="8dp"
                    app:tint="?attr/colorOnSurface" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordTextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Password"
                    app:passwordToggleEnabled="true"
                    android:textColorHint="?attr/colorOnSurfaceVariant"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textColor="?attr/colorOnSurface"/>
                </com.google.android.material.textfield.TextInputLayout>
                <ImageButton
                    android:id="@+id/passwordSpeechButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="Voice input for password"
                    android:src="@android:drawable/ic_btn_speak_now"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="8dp"
                    app:tint="?attr/colorOnSurface" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/repeatPasswordTextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Repeat Password"
                    app:passwordToggleEnabled="true"
                    android:textColorHint="?attr/colorOnSurfaceVariant"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/repeatPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textColor="?attr/colorOnSurface"/>
                </com.google.android.material.textfield.TextInputLayout>
                <ImageButton
                    android:id="@+id/repeatPasswordSpeechButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="Voice input for repeat password"
                    android:src="@android:drawable/ic_btn_speak_now"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="8dp"
                    app:tint="?attr/colorOnSurface" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personal Information"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/firstNameTextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="First Name"
                    android:textColorHint="?attr/colorOnSurfaceVariant"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/firstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName|textCapWords"
                        android:textColor="?attr/colorOnSurface"/>
                </com.google.android.material.textfield.TextInputLayout>
                <ImageButton
                    android:id="@+id/firstNameSpeechButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="Voice input for first name"
                    android:src="@android:drawable/ic_btn_speak_now"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="8dp"
                    app:tint="?attr/colorOnSurface" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/middleNameTextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Middle Name (Optional)"
                    android:textColorHint="?attr/colorOnSurfaceVariant"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/middleName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName|textCapWords"
                        android:textColor="?attr/colorOnSurface"/>
                </com.google.android.material.textfield.TextInputLayout>
                <ImageButton
                    android:id="@+id/middleNameSpeechButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="Voice input for middle name"
                    android:src="@android:drawable/ic_btn_speak_now"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="8dp"
                    app:tint="?attr/colorOnSurface" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/lastNameTextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Last Name"
                    android:textColorHint="?attr/colorOnSurfaceVariant"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/lastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName|textCapWords"
                        android:textColor="?attr/colorOnSurface"/>
                </com.google.android.material.textfield.TextInputLayout>
                <ImageButton
                    android:id="@+id/lastNameSpeechButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="Voice input for last name"
                    android:src="@android:drawable/ic_btn_speak_now"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="8dp"
                    app:tint="?attr/colorOnSurface" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/suffixTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Suffix (Optional, e.g., Jr., Sr.)"
                android:layout_marginTop="16dp"
                android:textColorHint="?attr/colorOnSurfaceVariant"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
                <AutoCompleteTextView
                    android:id="@+id/suffix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:focusable="false"
                    android:longClickable="false"
                    android:textColor="?attr/colorOnSurface"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/dateOfBirthTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date of Birth (MM/DD/YYYY)"
                android:layout_marginTop="16dp"
                android:textColorHint="?attr/colorOnSurfaceVariant"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/dateOfBirth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:focusable="false"
                    android:longClickable="false"
                    android:textColor="?attr/colorOnSurface"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/placeOfBirthTextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Place of Birth"
                    android:textColorHint="?attr/colorOnSurfaceVariant"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/placeOfBirth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:textColor="?attr/colorOnSurface"/>
                </com.google.android.material.textfield.TextInputLayout>
                <ImageButton
                    android:id="@+id/placeOfBirthSpeechButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="Voice input for place of birth"
                    android:src="@android:drawable/ic_btn_speak_now"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="8dp"
                    app:tint="?attr/colorOnSurface" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sex/Gender"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:textColor="?attr/colorOnSurface"/>
            <RadioGroup
                android:id="@+id/genderRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <RadioButton
                    android:id="@+id/radioMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:layout_marginEnd="16dp"
                    android:textColor="?attr/colorOnSurface"/>
                <RadioButton
                    android:id="@+id/radioFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:layout_marginEnd="16dp"
                    android:textColor="?attr/colorOnSurface"/>
                <RadioButton
                    android:id="@+id/radioOther"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other/Prefer not to say"
                    android:textColor="?attr/colorOnSurface"/>
            </RadioGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/civilStatusTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Civil Status"
                android:layout_marginTop="16dp"
                android:textColorHint="?attr/colorOnSurfaceVariant"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
                <AutoCompleteTextView
                    android:id="@+id/civilStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:focusable="false"
                    android:longClickable="false"
                    android:textColor="?attr/colorOnSurface"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/nationalityTextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Nationality"
                    android:textColorHint="?attr/colorOnSurfaceVariant"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/nationality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:text="Filipino"
                        android:textColor="?attr/colorOnSurface"/>
                </com.google.android.material.textfield.TextInputLayout>
                <ImageButton
                    android:id="@+id/nationalitySpeechButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="Voice input for nationality"
                    android:src="@android:drawable/ic_btn_speak_now"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="8dp"
                    app:tint="?attr/colorOnSurface" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Information"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/fullAddressTextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Full Address (House/Unit No., Street, Brgy., City/Mun., Prov., Region, Zip Code)"
                    android:textColorHint="?attr/colorOnSurfaceVariant"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fullAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPostalAddress|textMultiLine"
                        android:maxLines="5"
                        android:textColor="?attr/colorOnSurface"/>
                </com.google.android.material.textfield.TextInputLayout>
                <ImageButton
                    android:id="@+id/fullAddressSpeechButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="Voice input for full address"
                    android:src="@android:drawable/ic_btn_speak_now"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="8dp"
                    app:tint="?attr/colorOnSurface" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/mobileNumberTextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Mobile Number (+63...)"
                    android:textColorHint="?attr/colorOnSurfaceVariant"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/mobileNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:textColor="?attr/colorOnSurface"/>
                </com.google.android.material.textfield.TextInputLayout>
                <ImageButton
                    android:id="@+id/mobileNumberSpeechButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="Voice input for mobile number"
                    android:src="@android:drawable/ic_btn_speak_now"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="8dp"
                    app:tint="?attr/colorOnSurface" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Disability Information"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type(s) of Disability"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"/>
            <LinearLayout
                android:id="@+id/disabilityTypeCheckboxes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">
                <CheckBox android:id="@+id/cb_visual" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Visual Impairment" android:textColor="?attr/colorOnSurface"/>
                <CheckBox android:id="@+id/cb_hearing" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Hearing Impairment" android:textColor="?attr/colorOnSurface"/>
                <CheckBox android:id="@+id/cb_speech" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Speech Impairment" android:textColor="?attr/colorOnSurface"/>
                <CheckBox android:id="@+id/cb_physical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Physical Disability" android:textColor="?attr/colorOnSurface"/>
                <CheckBox android:id="@+id/cb_intellectual" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Intellectual Disability" android:textColor="?attr/colorOnSurface"/>
                <CheckBox android:id="@+id/cb_psychosocial" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Psychosocial Disability" android:textColor="?attr/colorOnSurface"/>
                <CheckBox android:id="@+id/cb_learning" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Learning Disability" android:textColor="?attr/colorOnSurface"/>
                <CheckBox android:id="@+id/cb_developmental" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Developmental Disability (e.g., ASD)" android:textColor="?attr/colorOnSurface"/>
                <CheckBox android:id="@+id/cb_multiple" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Multiple Disabilities" android:textColor="?attr/colorOnSurface"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/disabilityOtherTextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Other Disability (Please specify)"
                        android:textColorHint="?attr/colorOnSurfaceVariant"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/disabilityOther"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:textColor="?attr/colorOnSurface"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <ImageButton
                        android:id="@+id/disabilityOtherSpeechButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="Voice input for other disability"
                        android:src="@android:drawable/ic_btn_speak_now"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:layout_marginStart="8dp"
                        app:tint="?attr/colorOnSurface" />
                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/causeOfDisabilityTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cause of Disability"
                android:layout_marginTop="16dp"
                android:textColorHint="?attr/colorOnSurfaceVariant"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
                <AutoCompleteTextView
                    android:id="@+id/causeOfDisability"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:focusable="false"
                    android:longClickable="false"
                    android:textColor="?attr/colorOnSurface"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/pwdIdNumberTextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Registered PWD ID Number"
                    android:textColorHint="?attr/colorOnSurfaceVariant"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/pwdIdNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="?attr/colorOnSurface"/>
                </com.google.android.material.textfield.TextInputLayout>
                <ImageButton
                    android:id="@+id/pwdIdNumberSpeechButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="Voice input for PWD ID number"
                    android:src="@android:drawable/ic_btn_speak_now"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="8dp"
                    app:tint="?attr/colorOnSurface" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Emergency Contact"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emergencyContactPersonTextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Emergency Contact Person Full Name"
                    android:textColorHint="?attr/colorOnSurfaceVariant"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emergencyContactPerson"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName|textCapWords"
                        android:textColor="?attr/colorOnSurface"/>
                </com.google.android.material.textfield.TextInputLayout>
                <ImageButton
                    android:id="@+id/emergencyContactPersonSpeechButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="Voice input for emergency contact person"
                    android:src="@android:drawable/ic_btn_speak_now"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="8dp"
                    app:tint="?attr/colorOnSurface" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emergencyContactNumberTextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Emergency Contact Number (+63...)"
                    android:textColorHint="?attr/colorOnSurfaceVariant"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emergencyContactNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:textColor="?attr/colorOnSurface"/>
                </com.google.android.material.textfield.TextInputLayout>
                <ImageButton
                    android:id="@+id/emergencyContactNumberSpeechButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="Voice input for emergency contact number"
                    android:src="@android:drawable/ic_btn_speak_now"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="8dp"
                    app:tint="?attr/colorOnSurface" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emergencyContactRelationshipTextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Relationship to Emergency Contact"
                    android:textColorHint="?attr/colorOnSurfaceVariant"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emergencyContactRelationship"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:textColor="?attr/colorOnSurface"/>
                </com.google.android.material.textfield.TextInputLayout>
                <ImageButton
                    android:id="@+id/emergencyContactRelationshipSpeechButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="Voice input for emergency contact relationship"
                    android:src="@android:drawable/ic_btn_speak_now"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="8dp"
                    app:tint="?attr/colorOnSurface" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Consent &amp; Declaration"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"/>

            <CheckBox
                android:id="@+id/privacyConsentCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="8dp"
                android:text="@string/privacy_consent_text"/>
            <CheckBox
                android:id="@+id/truthfulnessDeclarationCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I declare that all information provided is true and correct."
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="24dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:padding="12dp"
                android:textSize="18sp"
                android:backgroundTint="?attr/colorPrimary"
                android:textColor="?attr/colorOnPrimary"
                app:cornerRadius="12dp"
                android:elevation="4dp"
                android:stateListAnimator="@null"/>

            <ProgressBar
                android:id="@+id/progressBarRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/loginButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? Login here"
                android:textColor="?attr/colorPrimary"
                android:textSize="16sp"
                android:layout_marginTop="32dp"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:focusable="true"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>