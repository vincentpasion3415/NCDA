<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/detailed_news_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:layout_marginBottom="16dp"
            tools:srcCompat="@drawable/placeholder_image" />

        <TextView
            android:id="@+id/detailed_news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"
            tools:text="Full Announcement Title Here" />

        <TextView
            android:id="@+id/detailed_news_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="16dp"
            tools:text="Published: July 28, 2025 10:30 PM" />

        <TextView
            android:id="@+id/detailed_news_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:lineSpacingExtra="4dp"
            tools:text="This is the full detailed description of the announcement, which can be much longer and contain more information than the snippet shown on the home page." />

    </LinearLayout>
</ScrollView>