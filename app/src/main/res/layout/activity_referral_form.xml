<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".NCDAReferralFormActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#2196F3"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="@string/n_c_d_a_referral_form"
        app:titleTextColor="#FFFFFF" />

    <TextView
        android:id="@+id/speech_status_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speech status"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/toolbar"
        android:layout_margin="8dp"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/speech_status_text_view"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/et_personal_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/personal_name"
                    android:inputType="textPersonName" />

                <ImageButton
                    android:id="@+id/btn_mic_name"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_btn_speak_now"
                    android:background="@android:color/transparent"
                    android:contentDescription="Speak name" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/et_pwd_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/pwd_id"
                    android:inputType="text" />

                <ImageButton
                    android:id="@+id/btn_mic_pwd"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_btn_speak_now"
                    android:background="@android:color/transparent"
                    android:contentDescription="Speak PWD ID" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/et_disability"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/disability_type"
                    android:inputType="text" />

                <ImageButton
                    android:id="@+id/btn_mic_disability"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_btn_speak_now"
                    android:background="@android:color/transparent"
                    android:contentDescription="Speak disability" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/service_needed"
                android:textStyle="bold"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spinner_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/et_remarks"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/remarks"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:gravity="top" />

                <ImageButton
                    android:id="@+id/btn_mic_remarks"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_btn_speak_now"
                    android:background="@android:color/transparent"
                    android:contentDescription="Speak remarks" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_submit_referral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/submit_referral" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>