<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PWDApplicationDetailsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#2196F3"
        app:titleTextColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_application_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Application Type: "
            android:textSize="18sp"
            android:textColor="#212121"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_disability_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disability: "
            android:textSize="18sp"
            android:textColor="#212121"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_pwd_application_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: "
            android:textSize="18sp"
            android:textColor="#212121"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_pwd_application_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Applicant: "
            android:textSize="18sp"
            android:textColor="#212121"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_pwd_application_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submitted: "
            android:textSize="18sp"
            android:textColor="#212121"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
